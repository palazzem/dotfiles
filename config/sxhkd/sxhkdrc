#
# wm independent hotkeys
#

# terminal emulator
super + Return
    urxvtc

# volume
super + {Down,Up}
    amixer -q set Master 5%{-,+}

# window gap via mouse wheel
super + button{4,5}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 5))

# file manager
super + e
    urxvtc -e "ranger"

# music player
super + shift + p
    urxvtc -e "ncmpcpp"

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# lock screen
super + control + l
    xlock -mode blank

# suspend
super + control + k
    xlock -mode blank & sleep 1 && systemctl suspend

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
    bspc quit

# close and kill
super + {_,shift + }w
    bspc window -{c,k}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
    bspc window -t '~{tiled,pseudo_tiled,floating,fullscreen}'

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc window -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc window -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }Tab
    bspc window -f {next,prev}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} '^{1-9,10}'

#
# resize tiled/floating
#

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
    bspc window {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
    bspc window {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# move a floating window
super + {Left,Down,Up,Right}
    xdo move {-x -20,-y +20,-y -20,-x +20}

#
# pointer focus/move/resize
#

# focus
~button1
    bspc pointer -g focus

# start move/resize
super + button{1-3}
    ; bspc pointer -g {move,resize_side,resize_corner}

# end move/resize
super + @button{1-3}
    bspc pointer -u
