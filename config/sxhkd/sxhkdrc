#
# wm independent hotkeys
#

# terminal emulator
super + Return
    urxvtc

# window gap via mouse wheel
super + button{4,5}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 5))

# file manager
super + e
    urxvtc -e "ranger"

# music player
super + shift + p
    urxvtc -e "ncmpcpp"

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# lock screen
super + control + l
    xlock -mode blank

# suspend
super + control + k
    xlock -mode blank & sleep 1 && systemctl suspend

# rofi
F12
    rofi -show run

F11
    rofi -show ssh

#
# bspwm hotkeys
#

# quit bspwm normally
super + alt + Escape
    bspc quit

# close and kill
super + {_,shift + }w
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# monitor settings
super + control + 8
    xrandr --output eDP1 --auto --output HDMI2 --off

super + control + 9
    xrandr --output eDP1 --auto --output HDMI2 --auto

super + control + 0
    xrandr --output eDP1 --off --output HDMI2 --auto

# keyboard special buttons
XF86MonBrightness{Down,Up}
    xbacklight -{dec,inc} 5

XF86KbdBrightness{Down,Up}
    echo {0,255} > /sys/class/leds/smc::kbd_backlight/brightness

XF86Audio{Raise,Lower}Volume
    amixer set Master 5%{+,-}

# volume
super + {Down,Up}
    amixer -q set Master 5%{-,+}

XF86AudioMute
    pactl set-sink-mute 0 toggle && pactl set-sink-mute 1 toggle

#
# state/flags
#

# toggle the node state
super + {s,f,t}
    bspc node -t '{floating,fullscreen,sticky}'

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }Tab
    bspc node -f {next,prev}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# resize tiled/floating
#

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
    bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
    bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# move a floating node
super + control + {Left,Down,Up,Right}
    xdo move {-x -20,-y +20,-y -20,-x +20}

#
# pointer focus/move/resize
#

# focus
~button1
    bspc pointer -g focus

# move and resize using mouse
super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

super + @button{1-3}
    bspc pointer -u
